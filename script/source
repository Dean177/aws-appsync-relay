ensure-env() {
    if ! [[ $S3_BUCKET && $STACK_NAME ]]; then
        echo "S3_BUCKET and STACK_NAME env vars must be set"
        exit 1
    fi
}

# Optionally define some config env vars in
# `.environment` in the project root
git_root="$(git rev-parse --show-toplevel)"
if [[ -f $git_root/.environment ]]; then
    source "$git_root/.environment"
fi
